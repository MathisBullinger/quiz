{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components/*": ["./src/components/*"]
    }
  },
  "include": ["./src/**/*"]
}
